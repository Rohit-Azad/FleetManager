<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_activity"
    tools:context=".MechanicMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grey_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#5F5E5C">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="open_drawer"
                android:paddingLeft="20dp"
                android:src="@drawable/ic_menu">

            </ImageView>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="WorkDetails"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/logfile" />

                    <TextView
                        android:id="@+id/work_details"
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/backedit"
                        android:gravity="center"
                        android:text="Work Details"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="26dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="open_work_orders"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/workorder_new" />

                    <TextView
                        android:id="@+id/work_orders"
                        android:layout_width="200dp"
                        android:layout_height="70dp"


                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/backedit"
                        android:gravity="center"
                        android:text="Show Open\nWork Orders"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="26dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="order_parts"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/spareparts" />

                    <TextView
                        android:id="@+id/order_parts"
                        android:layout_width="200dp"
                        android:layout_height="70dp"


                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/backedit"
                        android:gravity="center"
                        android:text="Order Parts"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="26dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="view_workorders"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/workorderedit" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="70dp"


                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/backedit"
                        android:gravity="center"
                        android:text="View\nWorkorders"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="26dp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"

        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rectangle">


            <TextView
                android:id="@+id/name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/backedit_headings"
                android:gravity="center"
                android:text="Name"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtnname"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/name"
                android:background="@drawable/backedit"
                android:gravity="center"
                android:text=" "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/backedit_headings"
                android:gravity="center"
                android:text="Email"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtmail"

                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtnname"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/email"
                android:background="@drawable/backedit"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/usernm"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/backedit_headings"
                android:gravity="center"
                android:text="Username"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtusrm"

                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtmail"
                android:layout_marginLeft="30dp"

                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/usernm"
                android:background="@drawable/backedit"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="update_profile"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:id="@+id/update_profile"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="close_work_order"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/workorder"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/close_work_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Update Status - WorkOrder"
                android:textSize="20dp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:onClick="shareapp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share App"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:id="@+id/share"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:onClick="rating"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rating"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Us"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"

                android:id="@+id/rateus"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:clickable="true"
            android:onClick="log_out">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logout"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>