<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateMechanicProfileActivity"
    android:background="@drawable/grey_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backedit_main_heading"
                android:gravity="center"
                android:text="Update Profile"
                android:textColor="@android:color/background_light"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/backedit_headings"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/adName"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/backedit"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/backedit_headings"
                    android:gravity="center"
                    android:text="Contact No."
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/id_cont"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/backedit"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/backedit_headings"
                    android:gravity="center"
                    android:text="Email"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/id_email"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/backedit"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/backedit_headings"
                    android:gravity="center"

                    android:text="UserName"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/id_uname"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/backedit"
                    android:enabled="false"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/backedit_headings"
                    android:gravity="center"
                    android:text="Password "
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/id_pass"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/backedit"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="20dp" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/backedit_headings"
                    android:gravity="center"


                    android:text="Confirm"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/id_cpass"
                    android:layout_width="240dp"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    android:background="@drawable/backedit"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backedit_headings"
                    android:gravity="center"
                    android:text="Security Question"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etSecQues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/backedit"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/backedit_headings"
                    android:gravity="center"
                    android:text="Security Answer"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etSecAns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/backedit"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/update1"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:onClick="UpdateMechanic"
                android:padding="5dp"
                android:text="Update"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>