<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="205dp"
    android:background="@drawable/grey_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/wrkID"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/backedit_main_heading"
            android:gravity="center|start|center_horizontal"
            android:paddingLeft="10dp"
            android:textColor="@android:color/background_light"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vmake"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/backedit_main_heading"
            android:gravity="center|start|center_horizontal"
            android:paddingLeft="10dp"
            android:textColor="@android:color/background_light"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vmodel"
            android:layout_width="155dp"
            android:layout_height="41dp"
            android:layout_margin="5dp"
            android:background="@drawable/backedit_main_heading"
            android:gravity="center|start|center_horizontal"
            android:paddingLeft="10dp"
            android:textColor="@android:color/background_light"
            android:textSize="26sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/backedit_headings"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="License plate"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lPlate"
            android:layout_width="220dp"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:background="@drawable/backedit"
            android:editable="false"

            android:paddingLeft="20dp"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/backedit_headings"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Vehicle Type"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/VType"
            android:layout_width="220dp"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:background="@drawable/backedit"

            android:editable="false"
            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/backedit_headings"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Vin Number"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vinNum"
            android:layout_width="220dp"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:background="@drawable/backedit"

            android:editable="false"
            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/backedit_headings"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Issue"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vIssue"
            android:layout_width="220dp"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:background="@drawable/backedit"

            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3ede5"

        />

</LinearLayout>