<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_bg"
    tools:context=".CreateWorkOrderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tx1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/backedit_headings"

                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="License"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/lplate"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@+id/tx1"
                android:background="@drawable/backedit"
                android:gravity="center|start"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnfind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@+id/lplate"
                android:background="@drawable/button"
                android:onClick="find"
                android:text="FIND" />

            <EditText
                android:id="@+id/Vin"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tx1"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="39dp"

                android:layout_toRightOf="@+id/tx1"
                android:background="@drawable/backedit"
                android:gravity="center|start"
                android:hint="VinNumber"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Vcomp"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/Vin"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-50dp"

                android:layout_toRightOf="@+id/tx1"
                android:background="@drawable/backedit"
                android:gravity="center|start"
                android:hint="Company"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/VType"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/Vcomp"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="39dp"

                android:layout_toRightOf="@+id/tx1"
                android:background="@drawable/backedit"
                android:gravity="center|start"
                android:hint="Vehicle Type"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/VName"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/VType"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-50dp"

                android:layout_toRightOf="@+id/tx1"
                android:background="@drawable/backedit"
                android:gravity="center|start"
                android:hint="Vehicle Name"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Date"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/VName"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="29dp"

                android:layout_toRightOf="@+id/tx1"
                android:background="@drawable/backedit"
                android:editable="false"
                android:gravity="center|start"
                android:hint="Date YYYY-MM-DD"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/issue"
                android:layout_width="284dp"
                android:layout_height="133dp"
                android:layout_below="@+id/Date"
                android:layout_marginLeft="-57dp"
                android:layout_marginTop="21dp"
                android:layout_toRightOf="@+id/tx1"
                android:background="@drawable/backedit"
                android:gravity="center|start"
                android:hint="Issue"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/issue"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="140dp"
                android:layout_marginRight="140dp"
                android:background="@drawable/button"
                android:onClick="addwork"
                android:text="Submit"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/backedit_main_heading"
                android:gravity="center"
                android:text="Create Work Order"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>